{
    "private": true,
    "scripts": {
        "dev": "npm run development && npx tailwindcss -i ./resources/css/app.css -o ./public/css/app.css --watch && vite",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "build": "npx tailwindcss -i ./resources/css/app.css -o ./public/css/app.css && vite build"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.2",
        "@tailwindcss/typography": "^0.5.0",
        "alpinejs": "^3.14.1",
        "autoprefixer": "^10.4.20",
        "axios": "^0.21.4",
        "laravel-mix": "^6.0.6",
        "laravel-vite-plugin": "^1.0.5",
        "lodash": "^4.17.19",
        "postcss": "^8.4.47",
        "tailwindcss": "^3.4.13",
        "vite": "^5.4.8"
    }
}
